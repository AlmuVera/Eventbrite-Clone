<h2 class="mb-2">Create new event</h2>
<form class="form-new-event" action="/" method="post">

  <div class="input-group mb-1">
    <input type="text" name="title" value="{{ event.title }}" class="form-control {{#if errors.title }}is-invalid{{/if}}" placeholder="Escribe el titulo del evento" />
    {{#if errors.title }}<div class="invalid-feedback">{{ errors.title }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <textarea class="form-control {{#if errors.description }}is-invalid{{/if}}" name="description" placeholder="DescripciÃ³n del evento" aria-label="Event description" >{{ event.description}} </textarea>
    {{#if errors.description }}<div class="invalid-feedback">{{ errors.description }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="text" name="image" value="{{ event.image }}" class="form-control {{#if errors.image }}is-invalid{{/if}}"
      placeholder="Enter event image url..." />
    {{#if errors.image }}<div class="invalid-feedback">{{ errors.image }}</div>{{/if}}
  </div>

  <button type="submit" class="btn btn-primary">Crear evento</button>
</form>

